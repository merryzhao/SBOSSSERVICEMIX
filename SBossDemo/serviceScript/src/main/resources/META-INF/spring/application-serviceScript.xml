<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<camel:camelContext id="camelContext" trace="false"
		xmlns="http://camel.apache.org/schema/blueprint">

		<!-- BeginRegion of end point -->

		<!-- Product Offering end point -->
		<camel:endpoint id="getServiceScriptEndPoint"
			uri="jetty:http://0.0.0.0:8282/sboss/getServiceScript" />

		<!-- Process end point -->
		<camel:endpoint id="getProcessScriptEndPoint"
			uri="jetty:http://0.0.0.0:8282/sboss/getProcessScript" />

		<!-- Order end point -->
		<camel:endpoint id="getOrderScriptEndPoint"
			uri="jetty:http://0.0.0.0:8282/sboss/getOrderScript" />

		<!--EndRegion of end point -->

		<!-- BeginRegion of route -->

		<!-- Route of Product Offering Script -->
		<camel:route id="getServiceScript">
			<camel:from ref="getServiceScriptEndPoint" />
			<camel:process ref="generalJettyInProcessor" />
			<camel:process ref="getServiceScriptInProcessor" />
			<camel:process ref="getServiceScriptConvertor" />
		</camel:route>

		<!-- Route of Process Script -->
		<camel:route id="getProcessScript">
			<camel:from ref="getProcessScriptEndPoint" />
			<camel:process ref="generalJettyInProcessor" />
			<camel:process ref="getProcessScriptInProcessor" />
			<camel:process ref="getProcessScriptConvertor" />
		</camel:route>

		<!-- Route of Order Script -->
		<camel:route id="getOrderScript">
			<camel:from ref="getOrderScriptEndPoint" />
			<camel:process ref="generalJettyInProcessor" />
			<camel:process ref="getOrderScriptInProcessor" />
			<camel:process ref="getOrderScriptConvertor" />
		</camel:route>

		<!-- EndRegion of route -->

	</camel:camelContext>
</beans>
